// 縮小
@media screen and (max-width: 1100px) {
    .dropbtn, .dropdown-content {
        min-width: 110px;
    }

    .indexauot {
        font-size: 20px;
    }
}

// 平板大小
@media screen and (max-width: 848px) {
    .dropbtn {
        display: none;
    }

    .disno {
        display: block;
        position: absolute;
        left: 0px;
    }
}

// 手機大小
@media screen and (max-width: 700px) {
    .logo {
        height: 35px;
    }

    .home {
        height: 40px;
    }

    .toptext {
        display: none;
    }

    .login {
        top: -8px;
        padding: 4px 4px;
        font-size: 10px;
    }

    .indexauot {
        font-size: 10px;
    }

    #footer {
        font-size: 5px;
    }
}