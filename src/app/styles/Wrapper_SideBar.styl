.wrapper {
    display: flex;
    // position: relative;
    overflow-x: hidden;
}

.blank_content, .wrapper .sidebar, .wrapper {
    height: calc(100vh - (var(--appbar-container-height) + 1px));
}

.wrapper .sidebar {
    max-width: 15%;
    min-width: 15%;
    background: #ffffff;
    overflow: hidden;
    position: relative;
    box-shadow: 0 2px 10px 0 rgba(0, 0, 0, 0.12);
    padding-right: 16px;

    &:hover {
        overflow-y: auto;
        overflow-y: overlay; // for chrome 滾動輪不影響寬度
    }

    a {
        color: #000000;
        display: block;
        text-decoration: none;
        white-space: nowrap;
    }
}

.active_ {
    background: #d3d3d3;
}

.oneline {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    -webkit-line-clamp: 1; // 行數
    -webkit-box-orient: vertical;
}

.twoline {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    white-space: normal;
}

.title {
    font-size: 20px;
    font-weight: bolder;
    padding: 0px 12px;
}

.subtitle {
    padding: 4px 16px;
}

.subtitle:hover, .esidebar:hover {
    background-color: #b1b1b1;
    // text-decoration: underline;
}

.wrapper .main_content, .wrapper .main_content_Exam, .wrapper .main_content_YTflame {
    width: 100%;
    height: 100%;
    position: relative;
    overflow-y: auto;
}

.wrapper .main_content {
    padding: 0px 80px 0px 80px;
    line-height: 25px;

    .header {
        padding: 20px;
        background: #fff;
        color: #717171;
        border-bottom: 1px solid #e0e4e8;
    }

    .info {
        margin: 20px;
        color: #717171;
        line-height: 25px;

        div {
            margin-bottom: 20px;
        }
    }
}

.refer {
    width: 100%;
    display: block;
    padding: 8px 16px;
    text-align: left;
    border: none;
    white-space: normal;
    float: none;
    outline: 0;
    border-top: 1px solid #e5e5e5;
    margin-top: 8px;
    padding-top: 16px;
    padding-bottom: 16px;
    font-size: 10px;
    color: #a3a3a3;
}

.domain {
    display: flex;
    list-style: none;
    border-bottom: 1px solid #e5e5e5;
    margin-top: 8px;
    margin-bottom: 8px;
    white-space: nowrap;

    .subject {
        margin: 4px;
        border-radius: 60px;
        cursor: pointer;
        padding: 0px 8px;

        &:hover {
            background: #c4c4c4;
        }
    }
}

.on {
    left: 0px;
}

.up {
    left: 0px;
    display: none;
}

.up, .on {
    position: absolute;
    border-radius: 5px;
    top: 90px;
    width: 25px;
    cursor: pointer;
    opacity: 0.95;
    background-color: #6c91c1;
    z-index: 5000;

    .p {
        font-size: 16px;
        text-align: center;
        color: white;
        margin-top: 6px;
        margin: 0 0 10px;
    }

    &:hover {
        background-color: #4670a8;
    }
}

.school {
    color: #000000;
    background: #f4f4f4;
    letter-spacing: 3px;
    height: 32px;
    margin: 12px;
    min-width: 12px;
    padding: 0 12px;
    border-radius: 16px;
    box-sizing: border-box;
    outline: none;
    overflow: hidden;
    cursor: pointer;
    user-select: none;
    position: relative;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -ms-flex-direction: row;
    -webkit-flex-direction: row;
    flex-direction: row;
    -ms-flex-align: center;
    -webkit-align-items: center;
    align-items: center;
    display: -ms-inline-flexbox;
    display: -webkit-inline-flex;
    display: inline-flex;
    border: 1px solid #c0c0c0;
    transition: background-color 0.5s cubic-bezier(0.05, 0, 0, 1);

    // font-family: 'Segoe UI', Arial, sans-serif;
    &:hover {
        background: #d9d9d9;
    }
}

.school-selected, .edu-selectorange {
    background-color: #808080;
    color: #ffffff;

    &:hover {
        background-color: #808080;
        color: #ffffff;
    }
}
